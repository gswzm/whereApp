<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/margin_space_10"
              android:layout_marginRight="@dimen/margin_space_10"
              android:background="@drawable/shape_rounded_rectangle"
              android:orientation="vertical"
              android:padding="@dimen/margin_space_10"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="温馨提示"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big"
            />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_space_5"
            android:background="@color/whitesmoke"
            />

    <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_space_10"
            android:layout_marginTop="@dimen/margin_space_10"
            android:lineSpacingExtra="3dp"
            android:text="\u3000\u3000为了更好的享受网上预约和网上申报服务，请完善你的真实身份信息。"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_middle"
            />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_space_5"
            android:background="@color/whitesmoke"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_space_40"
            android:orientation="horizontal"
            >

        <TextView
                android:id="@+id/tv_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="暂不完善"
                android:textColor="@color/halftransparent"
                android:textSize="@dimen/font_size_middle"
                />

        <View
            android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_space_5"
                android:layout_marginTop="@dimen/margin_space_5"
                android:background="@color/whitesmoke"
                />

        <TextView
                android:id="@+id/tv_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="立即完善"
                android:textColor="@color/appThemeColor"
                android:textSize="@dimen/font_size_middle"
                />

    </LinearLayout>

</LinearLayout>