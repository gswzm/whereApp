<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_loading_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_middle"
    android:paddingRight="@dimen/padding_middle"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/common_loading_dialog_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:src="@drawable/common_loading_img" />

    <TextView
        android:id="@+id/common_loading_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:textColor="#333333" />

</LinearLayout>